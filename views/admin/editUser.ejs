<% layout("layouts/boilerplate") %>
<div class="container mb-5 mt-5">
<div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header bg-danger text-white">
          Edit User Information
        </div>
        <div class="card-body">
            <form action="/admin/<%=user._id%>?_method=PUT" method="post">
                <div class="form-group mb-3">
                    <label for="firstname">First Name:</label>
                    <input type="text" id="firstname" name="firstname" class="form-control" value="<%= user.firstname %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="lastname">Last Name:</label>
                    <input type="text" id="lastname" name="lastname" class="form-control" value="<%= user.lastname %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" value="<%= user.email %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="number">Phone Number:</label>
                    <input type="tel" id="number" name="phone" class="form-control" value="<%= user.number %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="role">Role:</label>
                    <input type="text" id="role" name="role" class="form-control" value="<%= user.role %>">
                  </div>
                  <div class="text-center mb-4 mt-4">
                    <button type="submit" class="btn btn-success" id="saveChanges">Save Changes</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

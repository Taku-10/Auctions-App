<% layout("layouts/boilerplate") %>
<div class="container py-5">
  <% if (listings.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      <% for (let listing of listings) { %>
        <div class="col">
          <div class="card h-100">
            <h5 class="card-title text-center"><%= listing.title %></h5>
            <div class="card-body">
              <p class="card-text">Current price: <%= listing.price %></p>
              <p class="card-text">Condition: <%= listing.condition %></p>
              <p class="card-text">Category: <%= listing.category %></p>
              <p class="card-text"><%= listing.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                  <% if (currentUser && listing.owner.equals(currentUser._id)) { %>
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= listing._id %>">Delete</button>
                    <div class="modal fade" id="deleteModal<%= listing._id %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete listing</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <p>Are you sure you want to delete this listing?</p>
                          </div>
                          <div class="modal-footer">
                            <form action="/listings/<%= listing._id %>?_method=delete" method="post">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% } %>
                </div>
                <% if (listing.bids.length === 0 && new Date(listing.endTime) < new Date()) { %>
                  <form action="/listings/<%= listing._id %>/relist" method="post">
                    <button type="submit" class="btn btn-sm btn-success">Relist</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      You have no listings yet.
    </div>
  <% } %>
</div>

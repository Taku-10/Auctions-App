<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-center" style="height: 100vh;">
    <div class="container">
        <div class="row">
            <h1 class="text-center">Sign In</h1>
            <div class="col-6 offset-3">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="/login" class="needs-validation" method="post" novalidate>
                            <div class="col-auto mb-3">
                                <label class="form-label form-label-sm" for="username">Username</label>
                                <input class="form-control form-control-sm" type="text" name="username" id="username">
                            </div>
                            <div class="mb-3">
                                <label class="form-label form-label-sm" for="password">Password</label>
                                <input class="form-control form-control-sm" type="password" name="password" id="password">
                            </div>
                            <button class="btn btn-primary">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

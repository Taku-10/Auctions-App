<% layout("layouts/boilerplate") %>
<div class="container">
  <h1 class="text-center">All Users</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="bg-danger text-light">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Username</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><a href="/admin/users/<%= user._id %>"><%= user.firstname %></a></td>
            <td><a href="/admin/users/<%= user._id %>"><%= user.lastname %></a></td>
            <td><a href="/admin/users/<%= user._id %>"><%= user.username %></a></td>
            <td><a href="/admin/users/<%= user._id %>"><%= user.email %></a></td>
            <td><a href="/admin/users/<%= user._id %>"><%= user.number %></a></td>
            <td><a href="/admin/users/<%= user._id %>"><%= user.role %></a></td>
          </tr>
        <% }) %>
        <tr class="table-danger">
          <td colspan="1" class="text-right font-weight-bold text-dark">Total Users: <%= users.length %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

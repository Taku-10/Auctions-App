<% layout("layouts/boilerplate") %>
<main class="container my-5">
  <div class="row">
    <div class="col-md-6">
      <header>
        <h1 class="mb-5">Submit Your Ideas for BidMart</h1>
        <p class="lead mb-5">
          We're always looking for ways to improve our platform, and your ideas and feedback are essential to helping us grow. Use the form below to share your thoughts and suggestions with us.
        </p>
      </header>
      <form method="post" action="/submit-an-idea" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input name="name" type="text" class="form-control" id="name" placeholder="Enter your name" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Enter a name to continue
          </div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input name="email" type="email" class="form-control" id="email" placeholder="Enter your email" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Enter a valid email address to continue
          </div>
        </div>
        <div class="mb-3">
          <label for="ideatitle" class="form-label">Idea Title</label>
          <input name="ideatitle" type="text" class="form-control" id="ideatitle" placeholder="Enter a title for your idea" required>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Enter an idea title to continue
          </div>
        </div>
        <div class="mb-3">
          <label for="ideaDescription" class="form-label">Idea Description</label>
          <textarea name="ideaDescription" class="form-control" id="ideaDescription" rows="5" placeholder="Enter a description of your idea" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Enter a valid idea description to continue
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <img src="https://images.unsplash.com/photo-1493612276216-ee3925520721?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8aWRlYXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=800&q=60" alt="Lightbulb icon" height="250">
    </div>
  </div>
</main>

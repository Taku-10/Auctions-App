<% layout("layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 mt-5">
      <div class="card border-0 shadow">
        <div class="card-body">
          <h1 class="text-center mb-4"><i class="fas fa-gavel"></i> BidMart</h1>
          <form action="/reset/<%= token %>" method="post" class="needs-validation" novalidate>
            <div class="form-group mb-3">
              <i class="fas fa-lock"></i>
              <label class="form-label" for="password">New Password <span class="text-danger">*</span></label>
              <div class="input-group">
                <input placeholder="Enter your new password" type="password" id="password" name="password" class="form-control password-input" required>
                <div class="input-group-text password-toggle-icon">
                  <i class="far fa-eye toggle-password-btn"></i>
                </div>
                <div class="invalid-feedback">
                  Enter your new password to continue.
                </div>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div id="password-strength-meter" class="mt-2"></div>
              <div id="password-strength-text" class="text-muted"></div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-block mt-4">Reset Password</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/scripts/passwordStrength.js"></script>


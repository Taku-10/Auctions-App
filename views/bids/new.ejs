<% layout("layouts/boilerplate") %>

<div class="container"> 
</div>
<div class="row">
    <h1 class="text-center">Enter your bid details</h1>
    <div class="col-6 offset-3">
        <div class="card mb-4">
            <div class="card-body">
                <form action="/" method="post">
                    <div class="mb-3">
                        <input type="hidden" name="startTime" value="<%= startTime %>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="owner">Bidder name</label>
                        <input class="form-control" type="text" name="bidderName" id="bidderName">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" for="listingName">Bidder Amount</label>
                        <input class="form-control" type="text" name="bidderAmount" id="bidderAmount" required>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>









<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-12">
      <h2 class="mb-4">Your Bids</h2>

      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Bid ID</th>
              <th scope="col">Date</th>
              <th scope="col">Bid Amount</th>
              <th scope="col">Listing</th>
              <th scope="col">Outcome</th>
            </tr>
          </thead>
          <tbody>
            <% if (bids.length > 0) { %>
              <% bids.forEach(function(bid) { %>
                <tr>
                  <td><%= bid._id %></td>
                  <td><%= bid.date %></td>
                  <td>$<%= bid.bidAmount %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <img src="<%= bid.image %>" alt="Listing Image" width="60" height="60" class="mr-2">
                      <div><%= bid.listing.title %></div>
                    </div>
                  </td>
                  <% if (bid.wonAuction === "Won") { %>
                    <td class="text-success"><%= bid.wonAuction %></td>
                  <% } else if (bid.wonAuction === "Auction still running and you are Winning") { %>
                    <td class="text-success"><%= bid.wonAuction %></td>
                  <% } else if (bid.wonAuction === "Auction still running and you are Losing") { %>
                    <td class="text-danger"><%= bid.wonAuction %></td>
                  <% } else { %>
                    <td class="text-danger"> <%= bid.wonAuction %> </td>
                  <% } %>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center">You have no bids yet.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% layout("layouts/boilerplate") %>
<div class="container py-5">
  <% if (listings.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      <% for (let listing of listings) { %>
        <div class="col mb-4">
          <div class="card shadow d-flex flex-column">
            <img src="<%=listing.images[0].url %>" class="card-img-top" alt="<%= listing.title %> image">
            <div class="card-body">
              <div class="d-flex flex-column flex-grow-1">
                <h5 class="card-title mb-0"><%= listing.title %></h5>
                <% if (listing.description.length > 32) { %>
                  <p class="card-text my-2">
                    <span class="description-short"><%= listing.description.substring(0, 32) %></span>
                    <span class="description-ellipsis">...</span>
                    <span class="description-full d-none"><%= listing.description %></span>
                    <a href="#" class="btn btn-link btn-sm description-toggle border rounded-pill text-decoration-none text-dark">See more</a>
                  </p>
                <% } else { %>
                  <p class="card-text my-2"><%= listing.description %></p>
                <% } %>
                <p class="card-text my-2">Current price: <span class="fw-bold">$</span><%= listing.price%></p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <div>
                    <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View</a>
                    <% if (currentUser && listing.owner.equals(currentUser._id)) { %>
                      <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                      <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= listing._id %>">Delete</button>
                    <% } %>
                  </div>
                  <% if (listing.bids.length === 0 && new Date(listing.endTime) < new Date()) { %>
                    <form action="/listings/<%= listing._id %>/relist" method="post">
                      <button type="submit" class="btn btn-sm btn-outline-success">Relist</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      You have no listings yet.
    </div>
  <% } %>
</div>

<script>
  const toggles = document.querySelectorAll('.description-toggle');
  toggles.forEach((toggle) => {
    toggle.addEventListener('click', (event) => {
      event.preventDefault();
      const shortDesc = toggle.parentNode.querySelector('.description-short');
      const fullDesc = toggle.parentNode.querySelector('.description-full');
      const ellipsis = toggle.parentNode.querySelector('.description-ellipsis');
      shortDesc.classList.toggle('d-none');
      fullDesc.classList.toggle('d-none');
      ellipsis.classList.toggle('d-none');
      if (shortDesc.classList.contains('d-none')) {
        toggle.textContent = 'See less';
      } else {
        toggle.textContent = 'See more';
      }
    });
  });
</script>